@model IEnumerable<Examen2_MVC.Models.persona>

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header">
                <h4>Persona</h4>
            </div>
            <div class="box-body">
                @Ajax.ActionLink("Crear Persona", "Create", new AjaxOptions {
                HttpMethod="GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "contenido_modal",
                OnSuccess = "abrirModal('#modal_crear_persona')",
                })
                <div id="listar_persona">
                    @{Html.RenderPartial("List", Model);}
                </div>
            </div>

        </div>
    </div>
</div>
<div id="contenido_modal"></div>